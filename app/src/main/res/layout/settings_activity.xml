<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Title -->
    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <!-- Section 1: Multi-language -->
    <TextView
        android:id="@+id/multi_language_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multi-language"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_below="@id/settings_title"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/multi_language_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_alignBaseline="@id/multi_language_label"
        android:trackTint="#CCCCCC"
        android:trackTintMode="src_in"
        android:thumbTint="#4CAF50" />

    <Spinner
        android:id="@+id/language_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/multi_language_label"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        android:backgroundTint="#2196F3"
        android:popupBackground="#FFFFFF" />

    <!-- Section 2: Notifications -->
    <TextView
        android:id="@+id/notifications_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_below="@id/language_spinner"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/notifications_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_alignBaseline="@id/notifications_label"
        android:trackTint="#CCCCCC"
        android:trackTintMode="src_in"
        android:thumbTint="#4CAF50" />

    <!-- Section 3: Offline Sync -->
    <TextView
        android:id="@+id/offline_sync_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offline Sync"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_below="@id/notifications_label"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/offline_sync_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_alignBaseline="@id/offline_sync_label"
        android:trackTint="#CCCCCC"
        android:trackTintMode="src_in"
        android:thumbTint="#4CAF50" />

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#F8F8F8">

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:tint="#666666" />

        <ImageView
            android:id="@+id/nav_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_add"
            android:tint="#666666" />

        <ImageView
            android:id="@+id/nav_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_list"
            android:tint="#666666" />

        <ImageView
            android:id="@+id/nav_contacts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_contacts"
            android:tint="#666666" />

        <ImageView
            android:id="@+id/nav_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_settings"
            android:tint="#E53935" />

    </LinearLayout>

</RelativeLayout>
