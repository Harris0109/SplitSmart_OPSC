<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settings_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#800000"
        android:title="Settings"
        android:titleTextColor="#FFFFFF" />

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Section 1: Multi-language -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Multi-language"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/multi_language_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:trackTint="#CCCCCC"
                android:thumbTint="#4CAF50" />

            <Spinner
                android:id="@+id/language_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="8dp" />

            <!-- Section 2: Notifications -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/notifications_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:trackTint="#CCCCCC"
                android:thumbTint="#4CAF50" />

            <!-- Section 3: Offline Sync -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offline Sync"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/offline_sync_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:trackTint="#CCCCCC"
                android:thumbTint="#4CAF50" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
